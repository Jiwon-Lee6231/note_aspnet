<table class="table table-bordered">
    <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var memo in Model)
        {
            <tr>
                <td>@memo.MemoNo</td>
                <td><a asp-contoller="Memo" asp-action="Detail" asp-route-noteNo="@memo.MemoNo">@memo.MemoTitle</a></td>
                <td>@memo.UserNo</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-warning" asp-controller="Memo" asp-action="Add">게시물 작성</a>