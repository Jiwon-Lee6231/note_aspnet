@model Note.Model.Memo


<form method="post" asp-controller="Note" asp-action="Add">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">제목</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="MemoTitle" placeholder="제목 입력" />
            <span class="text-danger" asp-validation-for="MemoTitle"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">내용</label>
        <div class="col-sm-10">
            <textarea class="form-control editor" rows="10" asp-for="MemoContents" placeholder="내용 입력"></textarea>
            <span class="text-danger" asp-validation-for="MemoContents"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">저장</button>
            <a class="btn btn-default" asp-controller="Note" asp-action="Index">취소</a>
        </div>
    </div>
</form>